<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.askDeleteFragment">

    <TextView
        android:id="@+id/askDeleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить заметку?"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/askDeleteCancleButton"
        android:text="Отмена"
        android:layout_width="110dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/askDeleteDeleteButton"
        app:layout_constraintTop_toBottomOf="@id/askDeleteTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/askDeleteDeleteButton"
        android:text="Удалить"
        android:layout_width="110dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/askDeleteCancleButton"
        app:layout_constraintTop_toBottomOf="@id/askDeleteTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>